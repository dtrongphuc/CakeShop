                        <WrapPanel Grid.Row="2">

                            <Button
                                x:Name="ProductItem"
                                Width="368"
                                Height="200"
                                Margin="4,10"
                                Padding="0"
                                Panel.ZIndex="99"
                                cal:Message.Attach="[Event Click] = [ShowDetail]"
                                Background="Transparent"
                                BorderThickness="0"
                                ClipToBounds="True"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}">
                                <materialDesign:Card
                                    Width="360"
                                    Padding="-1,0"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                    materialDesign:ShadowAssist.ShadowEdges="Bottom, Right, Left"
                                    UniformCornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="180" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="180" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Stretch"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            RenderTransformOrigin="0.5 0.5"
                                            Source="/Resource/Images/Products/buttercreamfillvan.jpg"
                                            Stretch="UniformToFill" />
                                        <Grid
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Background="#fff">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="1" />
                                                <RowDefinition Height="26" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="0,10,0,0"
                                                Padding="10,0"
                                                VerticalAlignment="Top"
                                                FontSize="15"
                                                FontWeight="Bold"
                                                Foreground="#FF3E3E3E"
                                                Text="Buttercream Filled Vanilla Cupcake"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />
                                            <Separator
                                                Grid.Row="1"
                                                Margin="10,0"
                                                Background="#f0668d"
                                                Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                            <TextBlock
                                                Grid.Row="2"
                                                Margin="0,4,0,0"
                                                Padding="10,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="#FF646464"
                                                Text="Danh mục"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Grid.Row="3"
                                                Padding="10,0"
                                                FontSize="12"
                                                Text="Vanilla cake filled with buttercream icing, topped with buttercream icing and sprinkles"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />
                                        </Grid>

                                    </Grid>
                                </materialDesign:Card>
                            </Button>
                            <Button
                                Width="366"
                                Height="188"
                                Margin="4,10"
                                Padding="0"
                                Panel.ZIndex="99"
                                Background="Transparent"
                                BorderThickness="0"
                                ClipToBounds="True"
                                Style="{StaticResource MaterialDesignRaisedAccentButton}">
                                <materialDesign:Card
                                    Width="360"
                                    Padding="-1,0"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                    materialDesign:ShadowAssist.ShadowEdges="Bottom, Right, Left"
                                    UniformCornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="180" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="180" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Stretch"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            RenderTransformOrigin="0.5 0.5"
                                            Source="/Resource/Images/Products/buttercreamfillvan.jpg"
